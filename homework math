#include <iostream>
#include <cmath>

using namespace std;

int main ()
{
    float a,b;
    cout<<"enter value of a : "<<endl;
    cin>>a;
    
    cout<<"enter value of b : "<<endl;
    cin>>b;
    
    float x = pow (b,2) - pow(a,2);
    
    float area = a * (sqrt(x));
     
     cout<<"area = "<<area<<endl;
    
    
}

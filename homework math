   cout<<"value of area = "<<area<<endl;
   
   
   return 0;
    
}



#include <iostream>
#include <cmath>

using namespace std;

int main ()
{
   float pi = 3.14;
   float L;
   
   cout<<"value of L : "<<endl;
   cin>>L;
   
   float area = pow (L,2) / (4 * (pi));
   cout<<"value of area = "<<area<<endl;
   
   
   return 0;
    
}


#include <iostream>
#include <cmath>

using namespace std;

int main ()
{
   float pi = 3.14;
   float A,B;
   
   cout<<"value of A : "<<endl;
   cin>>A;
   
    cout<<"value of B : "<<endl;
   cin>>B;
   
   float area = (pi * pow (B,2)/4) * ((2*A-B)/ (2*A+B));
   cout<<"value of area = "<<area<<endl;
   
   
   return 0;
    
}



#include <iostream>
#include <cmath>

using namespace std;

int main ()
{
    float a,b,c;
    float pi =3.14;
    
    cout<<"value of a :"<<endl;
    cin>>a;
    
    cout<<"value of b :"<<endl;
    cin>>b;
    
    cout<<"value of c :"<<endl;
    cin>>c;
    
    float p = (a+b+c)/2;
    float t = (a*b*c)/ (4 * sqrt (p* (p-a) * (p-b) * (p-c)));
    float T =  pow (2,t);
    float area = pi*T;
    cout<<"value of area = "<<area<<endl;
}

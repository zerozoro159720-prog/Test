#include <iostream>
using namespace std;

enum enColor {Red, Blue, Black};
enum enGander {Male, Famle};
enum enMaritalStatus {Single, Married};

struct stAdress
{
    string StreatName;
    string BuildInfo;
    string PoBox;
    string ZibCode;
};

struct stContactInfo
{
    string PhoneNumber;
    string Email;
    stAdress Adress;
};

struct stPerson
{
    string FirstName;
    string LastName;
    stContactInfo ContactInfo;
    
    enColor Color;
    enGander Gander;
    enMaritalStatus MaritalStatus;
};

int main()
{
    stPerson person1;

    person1.FirstName = "Ameer";
    person1.LastName = "El-BANNA";

    person1.ContactInfo.Email = "Ameer3mk@gmail.com";
    person1.ContactInfo.PhoneNumber = "0107687680087";
    person1.ContactInfo.Adress.ZibCode = "9999";
    person1.ContactInfo.Adress.PoBox = "888";
    person1.ContactInfo.Adress.BuildInfo = "big build";
    person1.ContactInfo.Adress.StreatName = "2ard el mo3askr";

    person1.Color = Black;
    person1.Gander = Male;
    person1.MaritalStatus = Single;

    cout << "Name: " << person1.FirstName << " " << person1.LastName << endl;
    cout << "Email: " << person1.ContactInfo.Email << endl;
    cout << "Phone: " << person1.ContactInfo.PhoneNumber << endl;
    cout << "Address: " 
         << person1.ContactInfo.Adress.StreatName << ", "
         << person1.ContactInfo.Adress.BuildInfo << ", "
         << "P.O. Box: " << person1.ContactInfo.Adress.PoBox << ", "
         << "Zip: " << person1.ContactInfo.Adress.ZibCode << endl;

    cout << "Color: " << person1.Color << endl;
    cout << "Gender: " << person1.Gander << endl;
    cout << "Marital Status: " << person1.MaritalStatus << endl;

    return 0;
}

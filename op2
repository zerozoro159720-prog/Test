#include <iostream>
using namespace std;

int main ()
{
      int num1,num2;
      cout<<"Enter First Number : "<<"\n";
      cin>>num1;
      
      cout<<"Enter Seconde Number : "<<"\n";
      cin>>num2;
      int res = num1+num2;
      
      cout<<"First Number + Seconde Number ,Total = "<<res<<endl;
      cout<<"Half of Total = "<<res/2.<<endl;
      return 0;
}


#include <iostream>
using namespace std;

int main ()
{
      int num1,num2,num3;
      
      cout<<"enter number one : "<<"\n";
      cin>>num1;
      
      cout<<"enter number two : "<<"\n";
      cin>>num2;
      
      cout<<"enter number three : "<<"\n";
      cin>>num3;
      int res =num1+num2+num3;
      cout<<"total ="<<res<<endl;
      return 0;
}



#include <iostream>
using namespace std;

int main ()
{
      int mark1,mark2,mark3;
      
      cout<<"enter mark1 :"<<endl;
      cin>>mark1;
      
      cout<<"enter mark2 :"<<endl;
      cin>>mark2;
      
      cout<<"enter mark3 :"<<endl;
      cin>>mark3;
      
      int res = (mark1+mark2+mark3)/3.;
      cout<<"you got %"<<res<<endl;
      
      return 0;
}

int main ()
{
      int mark1,mark2,mark3;
      
      cout<<"enter mark1 :"<<endl;
      cin>>mark1;
      
      cout<<"enter mark2 :"<<endl;
      cin>>mark2;
      
      cout<<"enter mark3 :"<<endl;
      cin>>mark3;
      
      int res = (mark1+mark2+mark3)/3.;
      cout<<"you got %"<<res<<endl;
      
      return 0;
}


#include <iostream>
using namespace std;

int main ()
{
      int num1,num2;
      cout<<"enter num1 : "<<endl;
      cin>>num1;
      
      cout<<"enter num2 : "<<endl;
      cin>>num2;
      
      cout<<"num1 = "<<num1<<endl;
      cout<<"num2 = "<<num2<<endl;
      cout<<"----------------------------------"<<endl;
      int temp = num1;
      num1=num2;
      num2=temp;
      
      cout<<"num1 = "<<num1<<endl;
      cout<<"num2 = "<<num2<<endl;
      
      return 0;
}



#include <iostream>
using namespace std;

int main ()
{
      int a,b;
      
      cout<<"enter a : "<<"\n";
      cin>>a;
      
      cout<<"enter b : "<<"\n";
      cin>>b;
      
      int area = a*b;
      cout<<"area = "<<area<<endl;
      
      return 0;
}


#include <iostream>
using namespace std;

int main ()
{
      int a,h;
      
      cout<<"enter a : "<<"\n";
      cin>>a;
      
      cout<<"enter h : "<<"\n";
      cin>>h;
      
      cout<<"a = "<<a<<endl;
      cout<<"h = "<<h<<endl;
      
      int area =(a/2)*h;
      cout<<"area = "<<area<<endl;
      return 0;
}



#include <iostream>
using namespace std;

int main ()
{
      float d;
      const float pai = 3.14;
      
      cout<<"enter d : "<<endl;
      cin>>d;
      
      float area = (pai*d*d)/4;
      
      cout<<"area ="<<area<<endl;
      return 0;
}



#include <iostream>
using namespace std;

int main ()
{
      const float PI =3.14;
      float A;
      
      cout<<"A = "<<endl;
      cin>>A;
      
      float Area = (PI * (A*A) )/4;
      cout<<"Area ="<<Area<<"\n";
      
      return 0;
}



#include <iostream>
using namespace std;

int main ()
{
      const float PI = 3.14;
      float X;
      
      cout<<"X = "<<endl;
      cin>>X;
      
      float Area = (X * X) / (4* PI);
      cout<<"Area = "<<Area<<endl;
      
      return 0;
}


#include <iostream>
using namespace std;

int main ()
{
      const float PI = 3.14;
      float A;
      float B;
      
      cout<<"A = "<<"\n";
      cin>>A;
      
      cout<<"B = "<<"\n";
      cin>>B;
      
      float Area = (PI * B*B /4)*( (2*A - B)/(2*A + B) );
      cout<<"Area ="<<Area<<endl;
      
      return 0;
}



#include <iostream>
using namespace std;

int main ()
{
      int num1;
      
      cout<<"Enter number : "<<endl;
      cin>>num1;
      float total = num1*num1;
      float total2 = num1*num1*num1;
      float total3 = num1*num1*num1*num1;
      
      cout<<"total = "<<total<<endl;
      cout<<total2<<endl;
      cout<<total3<<endl;
      
      return 0;
}

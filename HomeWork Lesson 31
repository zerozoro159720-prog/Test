#include <iostream>
#include <string>
using namespace std;

int main ()
{
    string string1,string2,string3;
    
    getline (cin, string1);

    cout<<"Enter string2"<<endl;
    cin>>string2;
    
    cout<<"Enter string3"<<endl;
    cin>>string3;
    
    cout<<"********************************"<<endl;
    
    cout<<"the length of string1 is"<<string1.length ()<<endl;
    cout<<"chartres at 0,4,7 are : "<<string1 [0];
    cout<<" ,"<<string1 [4];
    cout<<" ,"<<string1 [7]<<endl;
    
    cout<<string2+string3<<endl;
    
    int sum = stoi (string2) * stoi (string3);

#include <iostream>
#include <string>
using namespace std;

struct Money {
    int monthSalary;
    int yearSalary;
};

struct Data {
    string name;
    int age;
    string city;
    string country;
    Money salary;
    char gender;
    bool married;
};

int main() {
    Data personal;

    cout << "Enter Name: ";
    getline(cin, personal.name);

    cout << "Enter Age: ";
    cin >> personal.age;

    cout << "Enter City: ";
    cin >> personal.city;

    cout << "Enter Country: ";
    cin >> personal.country;

    cout << "Enter Monthly Salary: ";
    cin >> personal.salary.monthSalary;

    personal.salary.yearSalary = personal.salary.monthSalary * 12;

    cout << "Enter Gender (M/F): ";
    cin >> personal.gender;

    cout << "Are you Married? (1 for Yes, 0 for No): ";
    cin >> personal.married;

    cout << "\n--- Personal Information ---\n";
    cout << "Name: " << personal.name << endl;
    cout << "Age: " << personal.age << endl;
    cout << "City: " << personal.city << endl;
    cout << "Country: " << personal.country << endl;
    cout << "Monthly Salary: " << personal.salary.monthSalary << endl;
    cout << "Yearly Salary: " << personal.salary.yearSalary << endl;
    cout << "Gender: " << personal.gender << endl;
    cout << "Marital Status: " << (personal.married ? "Married" : "Single") << endl;

    return 0;
}

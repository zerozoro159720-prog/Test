#include <iostream>
#include <cmath>

using namespace std;

int main()
{
	double x = 64;
	cout << "sqrt value of 64 : " << sqrt(x) << endl;// sqrt value of 64 : 8

	cout << "round value of sqrt 50 : " << round(sqrt(50)) << endl;//round value of sqrt 50 : 7

	cout << "pow value : 2^4 = " << pow(2,4) << endl;

	cout << "ceil value of 2.1 : " << ceil(2.1) << endl;//ceil value of 2.1 : 3
	cout << "floor value of 2.9 : " << floor(2.9) << endl;//floor value of 2.9 : 2

	cout << "abs value of -10 : " << abs(-10) << endl;//abs value of -10 : 10

   return 0;
}
